# Configurações aplicadas a todas as distribuições Linux no WSL 2
[wsl2]
# Ajuste para lidar com alta carga de trabalho do Docker
kernelCommandLine="sysctl.vm.max_map_count=524288 sysctl.fs.inotify.max_user_watches=1048576 sysctl.fs.inotify.max_user_instances=1024 sysctl.fs.inotify.max_queued_events=32768 sysctl.net.ipv4.tcp_tw_reuse=1"

memory=24GB
processors=8
swap=12GB

# Configuração de IP para evitar conflitos com o VMware
localhostForwarding=true

# Configurações de desempenho de disco
# pageReporting=true
